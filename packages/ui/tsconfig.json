{
  "extends": "@midday/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.cjs",
    ".storybook/**/*",
    "**/*.cjs"
  ],
  "exclude": ["node_modules"]
}
